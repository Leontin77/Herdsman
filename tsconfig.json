{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}

